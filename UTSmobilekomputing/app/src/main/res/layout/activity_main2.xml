<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UJIAN TENGAH SEMESTER"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEMESTER GENAP TA.2020/2021"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSTITUUT TEKNOLOGI DIRGANTARA ADISUTJIPTO"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/programstudi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Studi"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/nama_mahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Mahasiswa"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tampilnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NiM Mahasiswa" />

    <TextView
        android:id="@+id/matkul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matakuliah" />

    <TextView
        android:id="@+id/sks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SKS" />

    <TextView
        android:id="@+id/dosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosen Penngampu" />

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Tanggal pelaksanaan" />

    <TextView
        android:id="@+id/tampilkelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas" />


</LinearLayout>